{% if not comment.validated %}
    <form method="post" action="{{ path('post_comment_validate', {'post':comment.post.id, 'id': comment.id}) }}"
        onsubmit="return confirm('Are you sure you want to validate this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('validate' ~ comment.id) }}">
        <button class="btn"><i class="fa-solid fa-circle-check"></i></button>
    </form>
{% endif %}